            <folder>helpers</folder>
            <folder>models</folder>
            <folder>sql</folder>
            <folder>tables</folder>
            <folder>views</folder>
        </files>
        <languages folder="languages/admin">
			<language tag="en-GB">en-GB/en-GB.com_cubic.ini</language>
			<language tag="en-GB">en-GB/en-GB.com_cubic.sys.ini</language>
        </languages>
