    </languages>
    <administration>
        <menu img="components/com_cubic/assets/images/s_com_cubic.png" >COM_CUBIC</menu>
        <submenu>
            
			<menu link="option=com_cubic&amp;view=cubes" view="cubes" img="components/com_cubic/assets/images/s_cubes.png" alt="Cubic/Cubes">COM_CUBIC_TITLE_CUBES</menu>

