{% extends '@slider/view.twig' %}

{% macro checked(expected, actual, default) %}
    {% if actual is empty and default %}
        checked="checked"
    {% elseif expected == actual %}
        checked="checked"
    {% endif %}
{% endmacro %}



{% block form %}
    {% import '@core/form.twig' as form %}

    {% import _self as macro %}

    <table class="form-table swiper-options-general">
        <tr>
            <th scope="row">
                <label for="">
                    {{ translate('Cyclically') }}
                    {{ form.tooltip('swiper-general-loop') }}
                </label>
            </th>
            <td>
                <label for="loopTrue">
                    <input type="radio" name="general[loop]"
                           id="loopTrue"
                           value="true" {{ macro.checked('true', slider.settings.general.loop, 'true') }}/>
                    <span>{{ translate('Enable') }}</span>
                </label>
                <label for="loopFalse">
                    <input type="radio" name="general[loop]"
                           id="loopFalse"
                           value="false" {{ macro.checked('false', slider.settings.general.loop, 'false') }}/>
                    <span>{{ translate('Disable') }}</span>
                </label>
            </td>
        </tr>
        <tr>
            <th scope="row">
                <label for="slidesPerView">
                    {{ translate('Slides Per View') }}
                    {{ form.tooltip('swiper-general-slidesPerView') }}
                </label>
            </th>
            <td>
                <input class="regular-text" type="number" name="general[slidesPerView]"
                       id="effectsDelay" value="{{ slider.settings.general.slidesPerView }}" min="0" />
            </td>
        </tr>
        <tr>
            <th scope="row">
                <label for="paginationType">
                    {{ translate('Pagination Type') }}
                    {{ form.tooltip('general-paginationType') }}
                </label>
            </th>
            <td>
                <select id="paginationType" style="max-width: 240px;" name="general[paginationType]">
                    <option {% if slider.settings.general.paginationType == 'bullets' %} selected="selected" {% endif %} value="bullets">{{ translate('bullets') }}</option>
                    <option {% if slider.settings.general.paginationType == 'fraction' %} selected="selected" {% endif %} value="fraction">{{ translate('fraction') }}</option>                                     <option {% if slider.settings.general.paginationType == 'progress' %} selected="selected" {% endif %} value="progress">{{ translate('progress') }}</option>
                </select>
            </td>
        </tr>
        <tr>
            <th scope="row">
                <label for="mousewheelControl">
                    {{ translate('Mousewheel control') }}
                    {{ form.tooltip('general-mousewheelControl') }}
                </label>
            </th>
            <td>
                <label for="mousewheelControlTrue">
                    <input type="radio" name="general[mousewheelControl]"
                           id="mousewheelControlTrue"
                           value="true" {{ macro.checked('true', slider.settings.general.mousewheelControl, 'true') }}/>
                    <span>{{ translate('Enable') }}</span>
                </label>
                <label for="mousewheelControllFalse">
                    <input type="radio" name="general[mousewheelControl]"
                           id="mousewheelControlFalse"
                           value="false" {{ macro.checked('false', slider.settings.general.mousewheelControl, 'false') }}/>
                    <span>{{ translate('Disable') }}</span>
                </label>
            </td>
        </tr>
        <!-- Effects -->
        <tr data-tab="effects" id="effects">
            <th scope="row">
                <label for="effectsEffect">
                    {{ translate('Effect') }}
                    {{ form.tooltip('general-effect') }}
                </label>
            </th>
            <td>
                <button id="showSwiperEffectsPreview" class="button" style="vertical-align: middle;">
                    {{ translate('Select effect') }}
                </button>
                <span id="effectName" style="position: relative; vertical-align: middle; margin-left: 5px;">{{ slider.settings.general.effect |title }}</span>
                <input name="general[effect]" value="{{ slider.settings.general.effect }}" type="hidden"/>
            </td>
        </tr>

        <tr class="coverflow-effect-option effect-option">
            <th scope="row">
                <label for="">
                    {{ translate('Rotate') }}
                    {{ form.tooltip('coverflow-rotate') }}
                </label>
            </th>
            <td>
                <input class="regular-text" type="number" name="effects[coverflow][rotate]"
                       id="" value="{{ slider.settings.effects.coverflow.rotate }}"  min="0" />
            </td>
        </tr>
        <tr class="coverflow-effect-option effect-option">
            <th scope="row">
                <label for="">
                    {{ translate('Stretch') }}
                    {{ form.tooltip('coverflow-stretch') }}
                </label>
            </th>
            <td>
                <input class="regular-text" type="number" name="effects[coverflow][stretch]"
                       id="" value="{{ slider.settings.effects.coverflow.stretch }}"  min="0" />
