        <tr>
            <th scope="row">
                <label for="Pagination">
                    {{ translate('Pagination selector class selector') }}
                    {{ form.tooltip('advanced-pagination') }}
                </label>
            </th>
            <td>
                <input class="regular-text" type="text" name="advanced[pagination]"
                       id="effectsDelay" value="{{ slider.settings.advanced.pagination }}"  />
            </td>
        </tr>


        <tr>
            <th scope="row">
                <label for="spaceBetween">
                    {{ translate('Space Between') }}
                    {{ form.tooltip('advanced-spaceBetween') }}
                </label>
            </th>
            <td>
                <input class="regular-text" type="number" name="advanced[spaceBetween]"
                       id="effectsDelay" value="{{ slider.settings.advanced.spaceBetween }}" min="0" />
            </td>
        </tr>
        <tr>
            <th scope="row">
                <label for="autoHeight">
                    {{ translate('Set auto Height') }}
                    {{ form.tooltip('advanced-autoHeight') }}
                </label>
