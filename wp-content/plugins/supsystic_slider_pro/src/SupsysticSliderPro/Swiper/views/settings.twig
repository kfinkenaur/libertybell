                </label>
            </th>
            <td>
                <input class="regular-text" type="text" name="advanced[prevButton]"
                       id="effectsDelay" value="{{ slider.settings.advanced.prevButton }}"  />
            </td>
        </tr>
        <tr>
            <th scope="row">
                <label for="scrollbar">
                    {{ translate('Scrollbar selector class selector') }}
                    {{ form.tooltip('advanced-scrollbar') }}
                </label>
            </th>
            <td>
                <input class="regular-text" type="text" name="advanced[scrollbar]"
                       id="effectsDelay" value="{{ slider.settings.advanced.scrollbar }}"  />
            </td>
        </tr>
        <tr>
            <th scope="row">
                <label for="">
                    {{ translate('Scroll bar Hide') }}
                    {{ form.tooltip('advanced-scrollbarHide') }}
                </label>
