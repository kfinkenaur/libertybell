        </tr>
        <tr class="coverflow-effect-option effect-option">
            <th scope="row">
                <label for="">
                    {{ translate('Depth') }}
                    {{ form.tooltip('coverflow-depth') }}
                </label>
            </th>
            <td>
                <input class="regular-text" type="number" name="effects[coverflow][depth]"
                       id="" value="{{ slider.settings.effects.coverflow.depth| default(1) }}"  min="0" />
            </td>
        </tr>
        <tr class="coverflow-effect-option effect-option">
            <th scope="row">
                <label for="">
                    {{ translate('SlideShadows') }}
                    {{ form.tooltip('coverflow-slideShadows') }}
                </label>
            </th>
            <td>
                <label for="">
                    <input type="radio" name="effects[coverflow][slideShadows]"
                           id="setWrapperSizeTrue"
                           value="true" {{ macro.checked('true', slider.settings.effects.coverflow.slideShadows, 'false') }}/>
                    <span>{{ translate('Enable') }}</span>
                </label>
                <label for="setWrapperSizeFalse">
                    <input type="radio" name="effects[coverflow][slideShadows]"
                           id="setWrapperSizeFalse"
                           value="false" {{ macro.checked('false', slider.settings.effects.coverflow.slideShadows, 'false') }}/>
                    <span>{{ translate('Disable') }}</span>
                </label>
            </td>
        </tr>

        <tr class="flip-effect-option effect-option">
            <th scope="row">
                <label for="">
                    {{ translate('Slide Shadows') }}
                    {{ form.tooltip('flip-slideShadows') }}
                </label>
            </th>
            <td>
                <label for="">
                    <input type="radio" name="effects[flip][slideShadows]"
                           id="setWrapperSizeTrue"
                           value="true" {{ macro.checked('true', slider.settings.effects.flip.slideShadows, 'true') }}/>
                    <span>{{ translate('Enable') }}</span>
                </label>
                <label for="setWrapperSizeFalse">
                    <input type="radio" name="effects[flip][slideShadows]"
                           id="setWrapperSizeFalse"
                           value="false" {{ macro.checked('false', slider.settings.effects.flip.slideShadows, 'false') }}/>
                    <span>{{ translate('Disable') }}</span>
                </label>
            </td>
        </tr>
        <tr>
            <th scope="row">
                <label for="arrows-color">
                    {{ translate('Arrows color') }}
                    {{ form.tooltip('advanced-arrows-color') }}
                </label>
            </th>
            <td>
                <input type="text" class="" id="advanced-arrows-color" name="advanced[arrows_color]" value="{{ slider.settings.advanced.arrows_color }}">
            </td>
        </tr>

        <tr>
            <th scope="row">
                <label>
                    {{ translate('Autostart Slideshow') }}
                </label>
            </th>
            <td>
                {% for value in ['enable', 'disable'] %}
                    <label style="margin-right: 10px;">
                        <input type="radio" name="general[auto]"
                               value="{{ value }}"
                                {% if slider.settings.general.auto == value or (slider.settings.general.auto is empty and value == 'disable') %}
                            checked="checked"
                                {% endif %}/>
                        <span>
                        {{ translate(value|capitalize) }}
                    </span>
                    </label>
                {% endfor %}
            </td>
        </tr>
        {#<tr class="flip-effect-option effect-option">#}
        {#<th scope="row">#}
        {#<label for="">#}
        {#{{ translate('flip-limitRotation') }}#}
        {#{{ form.tooltip('flip-limitRotation') }}#}
        {#</label>#}
        {#</th>#}
        {#<td>#}
        {#<label for="">#}
        {#<input type="radio" name="effects[flip][limitRotation]"#}
        {#id="setWrapperSizeTrue"#}
        {#value="true" {{ macro.checked('true', slider.settings.effects.flip.limitRotation, 'true') }}/>#}
        {#<span>{{ translate('Enable') }}</span>#}
        {#</label>#}
        {#<label for="setWrapperSizeFalse">#}
        {#<input type="radio" name="effects[flip][limitRotation]"#}
        {#id="setWrapperSizeFalse"#}
        {#value="false" {{ macro.checked('false', slider.settings.effects.flip.limitRotation, 'false') }}/>#}
        {#<span>{{ translate('Disable') }}</span>#}
        {#</label>#}
        {#</td>#}
        {#</tr>#}
    </table>

    <p><button id="swiper-options-advanced-switch">{{ translate('Advanced options') }}</button></p>

    <table class="form-table swiper-options-advanced">


        <tr>
            <th scope="row">
                <label for="nextButton">
                    {{ translate('Next Button class selector') }}
                    {{ form.tooltip('advanced-nextButton') }}
                </label>
            </th>
            <td>
                <input class="regular-text" type="text" name="advanced[nextButton]"
                       id="effectsDelay" value="{{ slider.settings.advanced.nextButton }}" />
            </td>
        </tr>
        <tr>
            <th scope="row">
                <label for="prevButton">
                    {{ translate('Prev Button class selector') }}
