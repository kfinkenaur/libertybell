                    <input type="radio" name="advanced[autoHeight]"
                           id="autoHeightTrue"
                           value="true" {{ macro.checked('true', slider.settings.advanced.autoHeight, 'false') }}/>
                    <span>{{ translate('Enable') }}</span>
                </label>
                <label for="autoHeightFalse">
                    <input type="radio" name="advanced[autoHeight]"
                           id="autoHeightFalse"
                           value="false" {{ macro.checked('false', slider.settings.advanced.autoHeight, 'false') }}/>
                    <span>{{ translate('Disable') }}</span>
                </label>
            </td>
        </tr>
        <tr>
            <th scope="row">
                <label for="freeMode">
                    {{ translate('Free Mode') }}
                    {{ form.tooltip('advanced-freeMode') }}
                </label>
            </th>
            <td>
                <label for="freeModeTrue">
                    <input type="radio" name="advanced[freeMode]"
                           id="freeModeTrue"
                           value="true" {{ macro.checked('true', slider.settings.advanced.freeMode, 'true') }}/>
                    <span>{{ translate('Enable') }}</span>
                </label>
                <label for="freeModeFalse">
                    <input type="radio" name="advanced[freeMode]"
                           id="freeModeFalse"
                           value="false" {{ macro.checked('false', slider.settings.advanced.freeMode, 'false') }}/>
                    <span>{{ translate('Disable') }}</span>
                </label>
            </td>
        </tr>
        <tr>
            <th scope="row">
                <label for="lazyLoading">
                    {{ translate('Prevent Clicks') }}
                    {{ form.tooltip('advanced-lazyLoading') }}
                </label>
            </th>
            <td>
                <label for="lazyLoadingTrue">
                    <input type="radio" name="advanced[lazyLoading]"
                           id="lazyLoadingTrue"
                           value="true" {{ macro.checked('true', slider.settings.advanced.lazyLoading, 'true') }}/>
                    <span>{{ translate('Enable') }}</span>
                </label>
                <label for="lazyLoadingFalse">
                    <input type="radio" name="advanced[lazyLoading]"
                           id="lazyLoadingFalse"
                           value="false" {{ macro.checked('false', slider.settings.advanced.lazyLoading, 'false') }}/>
                    <span>{{ translate('Disable') }}</span>
                </label>
            </td>
        </tr>
        <tr>
            <th scope="row">
                <label for="preventClicks">
                    {{ translate('Prevent accidental unwanted clicks') }}
                    {{ form.tooltip('advanced-preventClicks') }}
                </label>
            </th>
            <td>
                <label for="preventClicksTrue">
                    <input type="radio" name="advanced[preventClicks]"
                           id="preventClicksTrue"
                           value="true" {{ macro.checked('true', slider.settings.advanced.preventClicks, 'true') }}/>
                    <span>{{ translate('Enable') }}</span>
                </label>
                <label for="preventClicksFalse">
                    <input type="radio" name="advanced[preventClicks]"
                           id="preventClicksFalse"
                           value="false" {{ macro.checked('false', slider.settings.advanced.preventClicks, 'false') }}/>
                    <span>{{ translate('Disable') }}</span>
                </label>
            </td>
        </tr>
    </table>
    <!-- Effect preview modal window -->
    <div id="previewEffectsWindow" style="display: none" title="Effects">
        <div id="effectPreviewVariants" style="margin-top: 20px;">
            {% for effect in ['slide', 'cube', 'coverflow' ,'flip'] %}
                <label style="width: 190px; float: left; margin-bottom: 10px;" for="effect{{ effect|title }}">
                    <input type="radio" name="unsusedvalueradiobutton" value="{{ effect }}" id="effect{{ effect|title }}" class="changeEffect" {% if slider.settings.effects.effect == effect %}checked="checked"{% endif %}/>
                    <span>{{ effect|title }}</span>
                </label>
            {% endfor %}
        </div>
    </div>

{% endblock %}