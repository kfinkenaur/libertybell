                <img id="captionPositionPrev" class="preset-image" src="{{ environment.getModule('jssor').getLocationUrl() }}/assets/css/img/caption-position-{{ key }}.jpg" data-value="{{ key }}">
                <div class="rs-preset-overlay">
                    <h3>{{ value }}</h3>
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}