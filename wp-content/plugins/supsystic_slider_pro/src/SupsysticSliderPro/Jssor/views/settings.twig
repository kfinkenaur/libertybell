{% extends '@slider/view.twig' %}

{% macro checked(expected, actual, default) %}
    {% if actual is empty %}
        {% if default %}checked="checked"{% endif %}
    {% elseif expected == actual %}
        checked="checked"
    {% else %}
        {% if default %}checked="checked"{% endif %}
    {% endif %}
{% endmacro %}

